<h1>Genres:</h1>

<% Genre.all.each do |genre| %>
    <% movies = Movie.all.collect{ |movie| movie if movie.genres.ids.include?(genre.id)} %>

    <% if movies.compact != [] %>
        <h2><%= genre.name %></h2>
        <% movies.compact.each do |movie| %>
            <strong>Movie: <a href="/movies/<%= movie.id %>"><%= movie.title %></a></strong><br><br>
            <strong>Starring: </strong>
            <% movie.actors.each do |actor| %>
                <li><%= actor.name %></li>
            <% end %><br>
        <% end %>
    <% end %>
<% end %>